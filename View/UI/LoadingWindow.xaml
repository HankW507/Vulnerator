<Controls:MetroWindow
    x:Class="Vulnerator.View.UI.LoadingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Vulnerator.View.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Vulnerator"
    Width="300"
    Height="300"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <StackPanel VerticalAlignment="Center">
        <Label
            HorizontalAlignment="Center"
            Content="Vulnerator"
            Style="{StaticResource TopLevelHeaderStyle}" />
        <Controls:MetroProgressBar IsIndeterminate="True" />
        <TextBlock HorizontalAlignment="Center" Text="Loading..." />
        <TextBlock HorizontalAlignment="Center" Text="(This will only take a moment)" />
    </StackPanel>
</Controls:MetroWindow>
