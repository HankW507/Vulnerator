<UserControl
    x:Class="Vulnerator.View.UI.ConfigurationManagementView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:Converters="clr-namespace:Vulnerator.View.Converter"
    xmlns:IconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:LiveCharts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
    xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:Vulnerator.View.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:v="clr-namespace:Vulnerator.View"
    xmlns:vm="clr-namespace:Vulnerator.ViewModel"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="800"
    d:DesignWidth="800"
    DataContext="{Binding ConfigurationManagement, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Converters:BooleanToCheckboxConverter x:Key="CheckboxConverter" />
    </UserControl.Resources>

    <Grid Background="{DynamicResource WindowBackgroundBrush}">
        <Controls:MetroAnimatedSingleRowTabControl Margin="10,0,5,0" Controls:TabControlHelper.Underlined="SelectedTabItem">
            <TabItem Header="Hardware">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0" Margin="0,0,0,5">
                        <Grid HorizontalAlignment="Stretch" DockPanel.Dock="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource TopLevelHeaderStyle}">
                                <TextBlock Text="Hardware Assets" TextTrimming="CharacterEllipsis" />
                            </Label>
                            <Label
                                Grid.Column="2"
                                Margin="0,3"
                                VerticalAlignment="Bottom">
                                <TextBlock Text="Count:" TextTrimming="CharacterEllipsis" />
                            </Label>
                            <Label
                                Grid.Column="3"
                                Margin="0,3"
                                VerticalAlignment="Bottom">
                                <TextBlock Text="{Binding Hardwares.Count}" TextTrimming="CharacterEllipsis" />
                            </Label>
                        </Grid>
                        <DataGrid
                            DockPanel.Dock="Top"
                            ItemsSource="{Binding Hardwares}"
                            Style="{StaticResource GreyBorderedDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn x:Name="hardwareCheckBoxColumn" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Center"
                                                IsChecked="{Binding IsChecked}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Displayed_Host_Name}"
                                    Header="Preferred Host Name"
                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}" TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBox}" TargetType="TextBox">
                                            <Setter Property="Margin" Value="0,5,5,5" />
                                            <Setter Property="Controls:TextBoxHelper.Watermark" Value="Preferred Host Name" />
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding FQDN}"
                                    Header="FQDN"
                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}" TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBox}" TargetType="TextBox">
                                            <Setter Property="Margin" Value="0,5,5,5" />
                                            <Setter Property="Controls:TextBoxHelper.Watermark" Value="FQDN (Read Only)" />
                                            <Setter Property="IsReadOnly" Value="True" />
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NetBIOS}"
                                    Header="NetBIOS"
                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}" TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBox}" TargetType="TextBox">
                                            <Setter Property="Margin" Value="0,5,5,5" />
                                            <Setter Property="Controls:TextBoxHelper.Watermark" Value="NetBIOS (Read Only)" />
                                            <Setter Property="IsReadOnly" Value="True" />
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Scan_IP}"
                                    Header="Last Scan IP"
                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}" TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBox}" TargetType="TextBox">
                                            <Setter Property="Margin" Value="0,5,5,5" />
                                            <Setter Property="Controls:TextBoxHelper.Watermark" Value="Last Scan IP (Read Only)" />
                                            <Setter Property="IsReadOnly" Value="True" />
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Binding ElementName=hardwareCheckBoxColumn, Path=ActualWidth}" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBox
                                            Grid.Column="1"
                                            Margin="0,0,5,5"
                                            VerticalAlignment="Bottom"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Discovered Host Name (Read Only)"
                                            IsReadOnly="True"
                                            Text="{Binding Host_Name}" />
                                        <TextBox
                                            Grid.Column="2"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Bottom"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Last Scan Date (Read Only)"
                                            IsReadOnly="True"
                                            Text="" />
                                        <TextBox
                                            Grid.Column="3"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Bottom"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Uncredentialed - 21745 (Read Only)"
                                            IsReadOnly="True"
                                            Text="{Binding Found_21745}" />
                                        <TextBox
                                            Grid.Column="4"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Bottom"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Uncredentialed - 26917 (Read Only)"
                                            IsReadOnly="True"
                                            Text="{Binding Found_26917}" />
                                        <DataGrid
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Height="100"
                                            Margin="0,0,5,5"
                                            VerticalAlignment="Top"
                                            ItemsSource="{Binding IP_Addresses}"
                                            Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding IP_Address}"
                                                    Header="IP Addresses"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <TextBox
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="0,0,5,5"
                                            VerticalAlignment="Bottom"
                                            Controls:TextBoxHelper.ButtonCommand="{Binding}"
                                            Controls:TextBoxHelper.ButtonContent="{IconPacks:PackIconMaterial Kind=PlusBoxOutline}"
                                            Controls:TextBoxHelper.ClearTextButton="True"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Add IP Address" />
                                        <DataGrid
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Height="100"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="True"
                                            ItemsSource="{Binding MAC_Addresses}"
                                            Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding MAC_Address}"
                                                    Header="MAC Addresses"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <TextBox
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Bottom"
                                            Controls:TextBoxHelper.ButtonCommand="{Binding}"
                                            Controls:TextBoxHelper.ButtonContent="{IconPacks:PackIconMaterial Kind=PlusBoxOutline}"
                                            Controls:TextBoxHelper.ClearTextButton="True"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Add MAC Address" />
                                        <DataGrid
                                            Grid.Row="1"
                                            Grid.Column="3"
                                            Height="100"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="True"
                                            ItemsSource="{Binding Groups}"
                                            Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Group_Name}"
                                                    Header="Associated Groups"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <ComboBox
                                            Grid.Row="2"
                                            Grid.Column="3"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Bottom"
                                            Controls:TextBoxHelper.ButtonCommand="{Binding}"
                                            Controls:TextBoxHelper.ButtonContent="{IconPacks:PackIconMaterial Kind=PlusBoxOutline}"
                                            Controls:TextBoxHelper.ClearTextButton="True"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Add Associated Group"
                                            IsEditable="True" />
                                        <DataGrid
                                            Grid.Row="1"
                                            Grid.Column="4"
                                            Height="100"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="True"
                                            ItemsSource="{Binding Contacts}"
                                            Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding First_Name}"
                                                    Header="First Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Last_Name}"
                                                    Header="Last Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Email}"
                                                    Header="Email"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <ComboBox
                                            Grid.Row="2"
                                            Grid.Column="4"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Bottom"
                                            Controls:TextBoxHelper.ButtonCommand="{Binding}"
                                            Controls:TextBoxHelper.ButtonContent="{IconPacks:PackIconMaterial Kind=PlusBoxOutline}"
                                            Controls:TextBoxHelper.ClearTextButton="True"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Add Associated Contact"
                                            IsEditable="True" />
                                        <DataGrid
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="4"
                                            Height="200"
                                            Margin="0,0,5,5"
                                            VerticalAlignment="Top"
                                            CanUserAddRows="False"
                                            CanUserDeleteRows="False"
                                            IsReadOnly="True"
                                            ItemsSource="{Binding Hardware_PPS}"
                                            Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding PP.Port}"
                                                    Header="Port"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding PP.Protocol}"
                                                    Header="Protocol"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Discovered_Service}"
                                                    Header="Discovered Service Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Display_Service}"
                                                    Header="Preferred Service Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTemplateColumn
                                                    Width="Auto"
                                                    Header="Report in Accreditation"
                                                    HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <IconPacks:PackIconMaterial
                                                                HorizontalAlignment="Center"
                                                                Kind="{Binding ReportInAccreditation, Converter={StaticResource CheckboxConverter}}"
                                                                ToolTip="{Binding ReportInAccreditation}" />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <DataGrid
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="4"
                                            Height="200"
                                            Margin="0,0,5,5"
                                            VerticalAlignment="Top"
                                            CanUserAddRows="False"
                                            CanUserDeleteRows="False"
                                            IsReadOnly="True"
                                            ItemsSource="{Binding SoftwareHardwares}"
                                            Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Software.Displayed_Software_Name}"
                                                    Header="Preferred Software Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="Auto"
                                                    Binding="{Binding Software.Software_Version}"
                                                    Header="Version"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTemplateColumn
                                                    Width="Auto"
                                                    Header="OS / Firmware"
                                                    HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}"
                                                    SortMemberPath="Is_OS_Or_Firmware">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <IconPacks:PackIconMaterial
                                                                HorizontalAlignment="Center"
                                                                Kind="{Binding Software.Is_OS_Or_Firmware, Converter={StaticResource CheckboxConverter}}"
                                                                ToolTip="{Binding Software.Is_OS_Or_Firmware}" />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </DataGrid>
                    </DockPanel>
                    <Expander
                        Grid.Column="1"
                        Background="{DynamicResource WindowBackgroundBrush}"
                        BorderThickness="0"
                        ExpandDirection="Right">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource LabelTextBrush}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconMaterial
                                        Grid.Column="0"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Kind="FilterOutline">
                                        <IconPacks:PackIconMaterial.LayoutTransform>
                                            <RotateTransform Angle="-90" />
                                        </IconPacks:PackIconMaterial.LayoutTransform>
                                    </IconPacks:PackIconMaterial>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource LabelTextBrush}"
                                        Text="Filter"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                    </Expander>
                    <Expander
                        Grid.Column="2"
                        Background="{DynamicResource WindowBackgroundBrush}"
                        BorderThickness="0"
                        ExpandDirection="Right">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource LabelTextBrush}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconMaterial
                                        Grid.Column="0"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Kind="CheckAll">
                                        <IconPacks:PackIconMaterial.LayoutTransform>
                                            <RotateTransform Angle="-90" />
                                        </IconPacks:PackIconMaterial.LayoutTransform>
                                    </IconPacks:PackIconMaterial>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource LabelTextBrush}"
                                        Text="Bulk Process"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                    </Expander>
                    <Expander
                        Grid.Column="3"
                        Background="{DynamicResource WindowBackgroundBrush}"
                        BorderThickness="0"
                        ExpandDirection="Right">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource LabelTextBrush}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconMaterialLight
                                        Grid.Column="0"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Kind="CloudDownload">
                                        <IconPacks:PackIconMaterialLight.LayoutTransform>
                                            <RotateTransform Angle="-90" />
                                        </IconPacks:PackIconMaterialLight.LayoutTransform>
                                    </IconPacks:PackIconMaterialLight>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource LabelTextBrush}"
                                        Text="Reporting"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                    </Expander>
                </Grid>
            </TabItem>
            <TabItem Header="Software">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0" Margin="0,0,0,5">
                        <Grid HorizontalAlignment="Stretch" DockPanel.Dock="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource TopLevelHeaderStyle}">
                                <TextBlock Text="Installed Software" TextTrimming="CharacterEllipsis" />
                            </Label>
                            <Label
                                Grid.Column="2"
                                Margin="0,3"
                                VerticalAlignment="Bottom">
                                <TextBlock Text="Count:" TextTrimming="CharacterEllipsis" />
                            </Label>
                            <Label
                                Grid.Column="3"
                                Margin="0,3"
                                VerticalAlignment="Bottom">
                                <TextBlock Text="{Binding Softwares.Count}" TextTrimming="CharacterEllipsis" />
                            </Label>
                        </Grid>
                        <DataGrid
                            DockPanel.Dock="Top"
                            ItemsSource="{Binding Softwares}"
                            Style="{StaticResource GreyBorderedDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn x:Name="softwareCheckBoxColumn" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Center"
                                                IsChecked="{Binding IsChecked}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Displayed_Software_Name}"
                                    Header="Preferred Software Name"
                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}" TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBox}" TargetType="TextBox">
                                            <Setter Property="Margin" Value="0,5,5,5" />
                                            <Setter Property="Controls:TextBoxHelper.Watermark" Value="Preferred Software Name" />
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="Auto"
                                    Binding="{Binding SoftwareHardwares.Count}"
                                    Header="Count"
                                    HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}" TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Binding ElementName=softwareCheckBoxColumn, Path=ActualWidth}" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBox
                                            Grid.Column="1"
                                            Margin="0,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Discovered Software Name (Read Only)"
                                            IsReadOnly="True"
                                            Text="{Binding Discovered_Software_Name}" />
                                        <TextBox
                                            Grid.Column="2"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Acronym"
                                            Text="{Binding Software_Acronym}" />
                                        <TextBox
                                            Grid.Column="3"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.ClearTextButton="True"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Software Function"
                                            Text="{Binding Function}" />
                                        <TextBox
                                            Grid.Column="4"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.ClearTextButton="True"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Software Instance"
                                            Text="{Binding Instance}" />
