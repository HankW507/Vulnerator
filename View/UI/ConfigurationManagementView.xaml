<UserControl
    x:Class="Vulnerator.View.UI.ConfigurationManagementView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:Converters="clr-namespace:Vulnerator.View.Converter"
    xmlns:IconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:LiveCharts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
    xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:Vulnerator.View.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:v="clr-namespace:Vulnerator.View"
    xmlns:vm="clr-namespace:Vulnerator.ViewModel"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="800"
    d:DesignWidth="800"
    DataContext="{Binding ConfigurationManagement, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Converters:BooleanToCheckboxConverter x:Key="CheckboxConverter" />
    </UserControl.Resources>

    <Grid Background="{DynamicResource WindowBackgroundBrush}">
        <Controls:MetroAnimatedSingleRowTabControl Margin="10,0,5,0" Controls:TabControlHelper.Underlined="SelectedTabItem">
            <TabItem Header="Hardware">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0" Margin="0,0,0,5">
                        <Label DockPanel.Dock="Top" Style="{StaticResource TopLevelHeaderStyle}">
                            <TextBlock Text="Hardware Assets" TextTrimming="CharacterEllipsis" />
                        </Label>
                        <DataGrid
                            AutoGenerateColumns="False"
                            BorderThickness="1"
                            DockPanel.Dock="Top"
                            HorizontalScrollBarVisibility="Disabled"
                            ItemsSource="{Binding Hardwares}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Center"
                                                IsChecked="{Binding IsChecked}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Displayed_Host_Name}"
                                    Header="Preferred Host Name"
                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}" TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding FQDN}"
                                    Header="FQDN"
                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NetBIOS}"
                                    Header="NetBIOS"
                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}" TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Scan_IP}"
                                    Header="Last Scan IP"
                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}" TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBox
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Discovered Host Name"
                                            IsReadOnly="True"
                                            Text="{Binding Host_Name}" />
                                        <TextBox
                                            Grid.Column="1"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Last Scan Date"
                                            IsReadOnly="True"
                                            Text="" />
                                        <TextBox
                                            Grid.Column="2"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Uncredentialed - 21745"
                                            IsReadOnly="True"
                                            Text="{Binding Found_21745}" />
                                        <TextBox
                                            Grid.Column="3"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Uncredentialed - 26917"
                                            IsReadOnly="True"
                                            Text="{Binding Found_26917}" />
                                        <DataGrid
                                            Grid.Row="1"
                                            Height="100"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="True"
                                            ItemsSource="{Binding IP_Addresses}"
                                            Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding IP_Address}"
                                                    Header="IP Addresses"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <DataGrid
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Height="100"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="True"
                                            ItemsSource="{Binding MAC_Addresses}"
                                            Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding MAC_Address}"
                                                    Header="MAC Addresses"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <DataGrid
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Height="100"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="True"
                                            ItemsSource="{Binding Groups}"
                                            Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Group_Name}"
                                                    Header="Associated Groups"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <DataGrid
                                            Grid.Row="1"
                                            Grid.Column="3"
                                            Height="100"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="True"
                                            ItemsSource="{Binding Contacts}"
                                            Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding First_Name}"
                                                    Header="First Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Last_Name}"
                                                    Header="Last Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Email}"
                                                    Header="Email"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <DataGrid
                                            Grid.Row="2"
                                            Grid.ColumnSpan="4"
                                            Height="200"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="True"
                                            ItemsSource="{Binding Hardware_PPS}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding PP.Port}"
                                                    Header="Port"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding PP.Protocol}"
                                                    Header="Protocol"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Discovered_Service}"
                                                    Header="Discovered Service Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Display_Service}"
                                                    Header="Preferred Service Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTemplateColumn
                                                    Width="Auto"
                                                    Header="Report in Accreditation"
                                                    HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <IconPacks:PackIconMaterial
                                                                HorizontalAlignment="Center"
                                                                Kind="{Binding ReportInAccreditation, Converter={StaticResource CheckboxConverter}}"
                                                                ToolTip="{Binding ReportInAccreditation}" />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <DataGrid
                                            Grid.Row="3"
                                            Grid.ColumnSpan="4"
                                            Height="200"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="True"
                                            IsReadOnly="True"
                                            ItemsSource="{Binding SoftwareHardwares}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Software.Displayed_Software_Name}"
                                                    Header="Preferred Software Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="Auto"
                                                    Binding="{Binding Software.Software_Version}"
                                                    Header="Version"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTemplateColumn
                                                    Width="Auto"
                                                    Header="OS / Firmware"
                                                    HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}"
                                                    SortMemberPath="Is_OS_Or_Firmware">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <IconPacks:PackIconMaterial
                                                                HorizontalAlignment="Center"
                                                                Kind="{Binding Software.Is_OS_Or_Firmware, Converter={StaticResource CheckboxConverter}}"
                                                                ToolTip="{Binding Software.Is_OS_Or_Firmware}" />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </DataGrid>
                    </DockPanel>
                    <Expander
                        Grid.Column="1"
                        Background="{DynamicResource WindowBackgroundBrush}"
                        BorderThickness="0"
                        ExpandDirection="Right">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource LabelTextBrush}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconMaterial
                                        Grid.Column="0"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Kind="FilterOutline">
                                        <IconPacks:PackIconMaterial.LayoutTransform>
                                            <RotateTransform Angle="-90" />
                                        </IconPacks:PackIconMaterial.LayoutTransform>
                                    </IconPacks:PackIconMaterial>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource LabelTextBrush}"
                                        Text="Filter"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                    </Expander>
                    <Expander
                        Grid.Column="2"
                        Background="{DynamicResource WindowBackgroundBrush}"
                        BorderThickness="0"
                        ExpandDirection="Right">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource LabelTextBrush}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconMaterial
                                        Grid.Column="0"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Kind="CheckAll">
                                        <IconPacks:PackIconMaterial.LayoutTransform>
                                            <RotateTransform Angle="-90" />
                                        </IconPacks:PackIconMaterial.LayoutTransform>
                                    </IconPacks:PackIconMaterial>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource LabelTextBrush}"
                                        Text="Bulk Process"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                    </Expander>
                    <Expander
                        Grid.Column="3"
                        Background="{DynamicResource WindowBackgroundBrush}"
                        BorderThickness="0"
                        ExpandDirection="Right">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource LabelTextBrush}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconMaterialLight
                                        Grid.Column="0"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Kind="CloudDownload">
                                        <IconPacks:PackIconMaterialLight.LayoutTransform>
                                            <RotateTransform Angle="-90" />
                                        </IconPacks:PackIconMaterialLight.LayoutTransform>
                                    </IconPacks:PackIconMaterialLight>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource LabelTextBrush}"
                                        Text="Reporting"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                    </Expander>
                </Grid>
            </TabItem>
            <TabItem Header="Software">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0" Margin="0,0,0,5">
                        <Label DockPanel.Dock="Top" Style="{StaticResource TopLevelHeaderStyle}">
                            <TextBlock Text="Software Enumeration" TextTrimming="CharacterEllipsis" />
                        </Label>
                        <DataGrid
                            AutoGenerateColumns="False"
                            BorderThickness="1"
                            DockPanel.Dock="Top"
                            ItemsSource="{Binding Softwares}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Displayed_Software_Name}"
                                    Header="Software Name"
                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                <DataGridTextColumn
                                    Width="Auto"
                                    Binding="{Binding SoftwareHardwares.Count}"
                                    Header="Count"
                                    HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}" />
                            </DataGrid.Columns>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBox
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Discovered Software Name"
                                            IsReadOnly="True"
                                            Text="{Binding Discovered_Software_Name}" />
                                        <TextBox
                                            Grid.Column="1"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Acronym"
                                            Text="{Binding Software_Acronym}" />
                                        <TextBox
                                            Grid.Column="2"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Software Function"
                                            Text="{Binding Function}" />
                                        <TextBox
                                            Grid.Column="3"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Software Instance"
                                            Text="{Binding Instance}" />
                                        <TextBox
                                            Grid.Row="1"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="DADMS ID"
                                            Text="{Binding DADMS_ID}" />
                                        <TextBox
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="DADMS Disposition"
                                            Text="{Binding DADMS_Disposition}" />
                                        <DatePicker
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="DADMS LDA"
                                            Text="{Binding DADMS_LDA}" />
                                        <DataGrid
                                            Grid.Row="2"
                                            Grid.ColumnSpan="4"
                                            Height="200"
                                            Margin="5,0,5,5"
                                            VerticalAlignment="Top"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="True"
                                            IsReadOnly="True"
                                            ItemsSource="{Binding SoftwareHardwares}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Hardware.Displayed_Host_Name}"
                                                    Header="Preferred Host Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Hardware.Displayed_Host_Name}"
                                                    Header="Discovered Host Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Hardware.FQDN}"
                                                    Header="FQDN"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Hardware.NetBIOS}"
                                                    Header="NetBIOS"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Hardware.Scan_IP}"
                                                    Header="Last Scan IP"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
                        </DataGrid>
                    </DockPanel>
                    <Expander
                        Grid.Column="1"
                        Background="{DynamicResource WindowBackgroundBrush}"
                        BorderThickness="0"
                        ExpandDirection="Right">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource LabelTextBrush}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconMaterial
                                        Grid.Column="0"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Kind="FilterOutline">
                                        <IconPacks:PackIconMaterial.LayoutTransform>
                                            <RotateTransform Angle="-90" />
                                        </IconPacks:PackIconMaterial.LayoutTransform>
                                    </IconPacks:PackIconMaterial>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource LabelTextBrush}"
                                        Text="Filter"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                    </Expander>
                    <Expander
                        Grid.Column="2"
                        Background="{DynamicResource WindowBackgroundBrush}"
                        BorderThickness="0"
                        ExpandDirection="Right">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource LabelTextBrush}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconMaterial
                                        Grid.Column="0"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Kind="CheckAll">
                                        <IconPacks:PackIconMaterial.LayoutTransform>
                                            <RotateTransform Angle="-90" />
                                        </IconPacks:PackIconMaterial.LayoutTransform>
                                    </IconPacks:PackIconMaterial>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource LabelTextBrush}"
                                        Text="Bulk Process"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                    </Expander>
                    <Expander
                        Grid.Column="3"
                        Background="{DynamicResource WindowBackgroundBrush}"
                        BorderThickness="0"
                        ExpandDirection="Right">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource LabelTextBrush}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconMaterialLight
                                        Grid.Column="0"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Kind="CloudDownload">
                                        <IconPacks:PackIconMaterialLight.LayoutTransform>
                                            <RotateTransform Angle="-90" />
                                        </IconPacks:PackIconMaterialLight.LayoutTransform>
                                    </IconPacks:PackIconMaterialLight>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource LabelTextBrush}"
                                        Text="Reporting"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                    </Expander>
                </Grid>
            </TabItem>
            <TabItem Header="Contacts">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0" Margin="0,0,0,5">
                        <Label DockPanel.Dock="Top" Style="{StaticResource TopLevelHeaderStyle}">
                            <TextBlock Text="Contacts" TextTrimming="CharacterEllipsis" />
                        </Label>
                        <DataGrid
                            Margin="5,0,0,0"
                            BorderThickness="1"
                            DockPanel.Dock="Top">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="*" Header="First Name" />
                                <DataGridTextColumn Width="*" Header="Last Name" />
                                <DataGridHyperlinkColumn Width="*" Header="Email" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                    <Expander
